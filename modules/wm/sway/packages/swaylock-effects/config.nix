{theme}: ''
  clock
  timestr=%R
  datestr=%a, %e of %B

  screenshots

  effect-blur=20x20

  indicator
  indicator-radius=100
  indicator-thickness=10
  indicator-caps-lock

  key-hl-color=${theme.focusColor}
  text-color=${theme.textColor}
  text-clear-color=${theme.textColor}
  text-ver-color=${theme.textColor}
  text-wrong-color=${theme.textColor}

  inside-color=${theme.backgroundColor}
  inside-clear-color=${theme.backgroundColor}
  inside-ver-color=${theme.backgroundColor}
  inside-wrong-color=${theme.alertColor}

  ring-color=${theme.backgroundColor}
  ring-clear-color=${theme.backgroundColor}
  ring-caps-lock-color=${theme.backgroundColor}
  ring-ver-color=${theme.focusColor}
  ring-wrong-color=${theme.alertColor}

  line-color=${theme.backgroundColor}
  line-clear-color=${theme.backgroundColor}
  line-caps-lock-color=${theme.backgroundColor}
  line-ver-color=${theme.focusColor}
  line-wrong-color=${theme.alertColor}

  disable-caps-lock-text
''
